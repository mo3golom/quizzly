package frontend_components


templ Accordion(title string, component templ.Component) {
    <div class="collapse collapse-arrow bg-base-200 border-base-200 border-4 mb-4">
      <input type="checkbox" />
      <div class="collapse-title text-xl font-medium">{ title }</div>
      <div class="collapse-content bg-white">
        @component
      </div>
    </div>
}